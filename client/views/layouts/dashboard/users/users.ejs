<!DOCTYPE html>
<html lang="en" class="h-full">
    
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link rel="icon" href="/images/logo-blanc.png" type="image/x-icon">
    <link type="text/css" rel="stylesheet" href="../css/output.css" />
    <link rel="stylesheet" href="../css/style.css">
    <script type="text/javascript" src="../js/filter.js" defer></script>
    <script type="text/javascript" src="../js/main.js" defer></script>
    
</head>

<body class=" min-h-screen relative ">
    <!-- Nav Bar -->
    <header class=" ">
        <%- include('../../../components/dashboard/nav-bar-dashboard') %>
    </header>
    
    <main class="flex flex-col items-center gap-y-7 justify-center md:w-[85vw] sm:ml-auto min-h-screen md:pt-40 pt-14">

        <!-- Search a movie -->
        <a href="#top">
            <button class="container w-fit open-search-movies">
                <div class="flex items-center justify-between cursor-pointer border h-20 w-[40vw] min-w-[300px] bg-whiteOne px-4 pl-16 hover:bg-gradient-to-r from-whiteOne to-blueOne/15 bg-[length:200%_100%] hover:animate-bg-fill-animation whitespace-nowrap">
                    <li class="list-none font-arvo text-blueOne">
                        Rechercher un film
                    </li>
                    <svg xmlns="http://www.w3.org/2000/svg" class="text-blueOne" width="2em" height="2em" viewBox="0 0 24 24">
                        <path fill="currentColor" d="M15.5 14h-.79l-.28-.27A6.471 6.471 0 0 0 16 9.5A6.5 6.5 0 1 0 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5S14 7.01 14 9.5S11.99 14 9.5 14"/>
                    </svg>
                </div>
            </button>
        </a>
    
        <!-- Choose a movie theater -->
        <button class="theater-filter">
            <div class="flex items-center justify-between cursor-pointer border h-20 w-[40vw] min-w-[300px] bg-whiteOne px-4 pl-16 hover:bg-gradient-to-r from-whiteOne to-blueOne/15 bg-[length:200%_100%] hover:animate-bg-fill-animation whitespace-nowrap">
                <li class="list-none font-arvo text-blueOne">
                    Choisir un cinéma
                </li>
                <svg xmlns="http://www.w3.org/2000/svg" class="text-blueOne" width="1.9em" height="1.9em" viewBox="0 0 24 24">
                    <path fill="currentColor" d="M5.293 9.293a1 1 0 0 1 1.414 0L12 14.586l5.293-5.293a1 1 0 1 1 1.414 1.414l-6 6a1 1 0 0 1-1.414 0l-6-6a1 1 0 0 1 0-1.414"/>
                </svg>
            </div>
        </button>
    
        <!-- Reservation status -->
        <button class="open-search-status">
            <div class="flex items-center justify-between cursor-pointer border h-20 w-[40vw] min-w-[300px] bg-whiteOne px-4 pl-16 hover:bg-gradient-to-r from-whiteOne to-blueOne/15 bg-[length:200%_100%] hover:animate-bg-fill-animation whitespace-nowrap">
                <li class="list-none font-arvo text-blueOne">
                    Statut de la réservation
                </li>
                <svg xmlns="http://www.w3.org/2000/svg" class="text-blueOne" width="1.9em" height="1.9em" viewBox="0 0 24 24">
                    <path fill="currentColor" d="M5.293 9.293a1 1 0 0 1 1.414 0L12 14.586l5.293-5.293a1 1 0 1 1 1.414 1.414l-6 6a1 1 0 0 1-1.414 0l-6-6a1 1 0 0 1 0-1.414"/>
                </svg>
            </div>
        </button>



        <!-- search movie theater dropdown -->
        <%- include('../../../components/searchTheaterMenu') %>
        
        <!-- search movies menu -->
        <%- include('../../../components/search-movies-menu') %>

        <!-- Choose reservation status -->
        <%- include('../../../components/dashboard/reservation-status') %>
    
        <!-- Movie Listing Section -->
        <section class="mt-8">
            <%- include('../../../components/dashboard/movie-listing') %>
        </section>    
    </main>
    

    <!-- Side Bar Menu -->
    <aside class="fixed z-20 top-0 left-0 h-screen">
        <%- include('../../../components/dashboard/side-menu') %>
    </aside>


    
    <!-- Footer -->
    <footer class="pt-80">
        <%- include('../../../components/footer') %>
    </footer>
    
    <div class="hidden" id="close-filter-menu"></div>
    </body>
</html>




