                <path d="M38.7483 58.1792L77.2365 57.9007L58.3391 77.3852L38.7483 58.1792Z" fill="white" stroke="white"/>
                <path d="M77.8261 96.7967L39.3373 96.9738L58.286 77.5392L77.8261 96.7967Z" fill="white" stroke="white"/>
                </svg>
                
        </div>


        <% if (user && user.role === 'employee') { %>
            <div class="mt-32">
                <a href="/dashboard/employee/films">
                    <button class="text-white font-arvo font-bold h-12 w-full hover:bg-goldOne active:bg-goldOne flex justify-start items-center px-10 gap-4 text-nowrap mb-7">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"><g fill="none"><path d="M24 0v24H0V0zM12.593 23.258l-.011.002l-.071.035l-.02.004l-.014-.004l-.071-.035q-.016-.005-.024.005l-.004.01l-.017.428l.005.02l.01.013l.104.074l.015.004l.012-.004l.104-.074l.012-.016l.004-.017l-.017-.427q-.004-.016-.017-.018m.265-.113l-.013.002l-.185.093l-.01.01l-.003.011l.018.43l.005.012l.008.007l.201.093q.019.005.029-.008l.004-.014l-.034-.614q-.005-.019-.02-.022m-.715.002a.02.02 0 0 0-.027.006l-.006.014l-.034.614q.001.018.017.024l.015-.002l.201-.093l.01-.008l.004-.011l.017-.43l-.003-.012l-.01-.01z"/><path fill="white" d="M12 2c5.523 0 10 4.477 10 10a9.99 9.99 0 0 1-3.999 8H20a1 1 0 1 1 0 2h-8C6.477 22 2 17.523 2 12S6.477 2 12 2m0 12a2 2 0 1 0 0 4a2 2 0 0 0 0-4m-4-4a2 2 0 1 0 0 4a2 2 0 0 0 0-4m8 0a2 2 0 1 0 0 4a2 2 0 0 0 0-4m-4-4a2 2 0 1 0 0 4a2 2 0 0 0 0-4"/></g></svg>
                    Films
                    </button>
                </a>
                <a href="/dashboard/employee/rooms">
                    <button class="text-white font-arvo font-bold h-12 w-full hover:bg-goldOne active:bg-goldOne flex justify-start items-center px-10 gap-4 text-nowrap mb-7">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"><path fill="white" d="M1.998 21v-2h2V4.835a1 1 0 0 1 .821-.984l9.472-1.722a.6.6 0 0 1 .707.59v1.28l4 .001a1 1 0 0 1 1 1v14h2v2h-4V6h-3v15zm10-10h-2v2h2z"/></svg>
                    Salles
                    </button>
                </a>

                <a href="/dashboard/employee/reviews">
                    <button class="text-white font-arvo font-bold h-12 w-full hover:bg-goldOne active:bg-goldOne flex justify-start items-center px-10 gap-4 text-nowrap mb-7">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"><path fill="white" d="M21.947 9.179a1.001 1.001 0 0 0-.868-.676l-5.701-.453l-2.467-5.461a.998.998 0 0 0-1.822-.001L8.622 8.05l-5.701.453a1 1 0 0 0-.619 1.713l4.213 4.107l-1.49 6.452a1 1 0 0 0 1.53 1.057L12 18.202l5.445 3.63a1.001 1.001 0 0 0 1.517-1.106l-1.829-6.4l4.536-4.082c.297-.268.406-.686.278-1.065"/></svg>
                    Avis
                    </button>
                </a>

                <a href="/dashboard/employee/showtimes">
                    <button class="text-white font-arvo font-bold h-12 w-full hover:bg-goldOne active:bg-goldOne flex justify-start items-center px-10 gap-4 text-nowrap mb-7">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"><path fill="white" d="m4 4l2 4h3L7 4h2l2 4h3l-2-4h2l2 4h3l-2-4h3q.825 0 1.413.588T22 6v12q0 .825-.587 1.413T20 20H4q-.825 0-1.412-.587T2 18V6q0-.825.588-1.412T4 4m0 6v8h16v-8zm0 0v8z"/></svg>
                    Séances
                    </button>
                </a>
            </div>
        <% } else if(user && user.role === 'user') { %>
            <div class="mt-32 mb-80">
                <a href="/dashboard/user">
                        <button class="text-white font-arvo font-bold h-12 w-full hover:bg-goldOne active:bg-goldOne flex justify-start items-center px-10 gap-4 text-nowrap">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"><g fill="none"><path d="M24 0v24H0V0zM12.593 23.258l-.011.002l-.071.035l-.02.004l-.014-.004l-.071-.035c-.01-.004-.019-.001-.024.005l-.004.01l-.017.428l.005.02l.01.013l.104.074l.015.004l.012-.004l.104-.074l.012-.016l.004-.017l-.017-.427c-.002-.01-.009-.017-.017-.018m.265-.113l-.013.002l-.185.093l-.01.01l-.003.011l.018.43l.005.012l.008.007l.201.093c.012.004.023 0 .029-.008l.004-.014l-.034-.614c-.003-.012-.01-.02-.02-.022m-.715.002a.023.023 0 0 0-.027.006l-.006.014l-.034.614c0 .012.007.02.017.024l.015-.002l.201-.093l.01-.008l.004-.011l.017-.43l-.003-.012l-.01-.01z"/><path fill="white" d="M12 2c5.523 0 10 4.477 10 10a9.985 9.985 0 0 1-3.999 8H20a1 1 0 1 1 0 2h-8C6.477 22 2 17.523 2 12S6.477 2 12 2m0 12a2 2 0 1 0 0 4a2 2 0 0 0 0-4m-4-4a2 2 0 1 0 0 4a2 2 0 0 0 0-4m8 0a2 2 0 1 0 0 4a2 2 0 0 0 0-4m-4-4a2 2 0 1 0 0 4a2 2 0 0 0 0-4"/></g></svg>
                        Mes commandes
                    </button>
                </a>
                <button id="movie-description" class="text-white h-12 hidden items-center justify-start px-10 gap-4 w-full font-bold font-arvo hover:bg-goldOne active:bg-goldOne"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"><path fill="currentColor" d="M8 18h8v-2H8zm0-4h8v-2H8zm-2 8q-.825 0-1.412-.587T4 20V4q0-.825.588-1.412T6 2h8l6 6v12q0 .825-.587 1.413T18 22zm7-13h5l-5-5z"/></svg>
                    Voir réservation
                </button>
            </div>
            <% } else if (user && user.role === 'admin') { %>
                <div class="mt-32">
                    <a href="/dashboard/admin">
                        <button class="text-white font-arvo font-bold h-12 w-full hover:bg-goldOne active:bg-goldOne flex justify-start items-center px-10 gap-4 text-nowrap mb-7"><svg xmlns="http://www.w3.org/2000/svg" width="17" height="17" viewBox="0 0 24 24"><path fill="currentColor" d="M21.75 4.69v3.88a2.41 2.41 0 0 1-.71 1.72a2.47 2.47 0 0 1-1.72.71H4.68a2.42 2.42 0 0 1-2.43-2.43V4.69a2.44 2.44 0 0 1 2.43-2.44h14.64a2.44 2.44 0 0 1 1.72.72a2.408 2.408 0 0 1 .71 1.72M11 15.43v3.89a2.42 2.42 0 0 1-2.43 2.43H4.68a2.42 2.42 0 0 1-2.43-2.43v-3.88A2.44 2.44 0 0 1 4.68 13h3.89a2.42 2.42 0 0 1 1.71.72a2.46 2.46 0 0 1 .72 1.71m10.75.01v3.88a2.41 2.41 0 0 1-.71 1.72a2.47 2.47 0 0 1-1.72.71h-3.89a2.45 2.45 0 0 1-1.72-.71a2.409 2.409 0 0 1-.71-1.72v-3.88A2.46 2.46 0 0 1 15.43 13h3.89a2.44 2.44 0 0 1 1.72.72a2.407 2.407 0 0 1 .71 1.72"/></svg>
                        Dashboard</button>
                    </a>

                    <a href="/dashboard/admin/films">
                        <button class="text-white font-arvo font-bold h-12 w-full hover:bg-goldOne active:bg-goldOne flex justify-start items-center px-10 gap-4 text-nowrap mb-7"><svg class=" top-34 left-5" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"><g fill="none"><path d="M24 0v24H0V0zM12.593 23.258l-.011.002l-.071.035l-.02.004l-.014-.004l-.071-.035c-.01-.004-.019-.001-.024.005l-.004.01l-.017.428l.005.02l.01.013l.104.074l.015.004l.012-.004l.104-.074l.012-.016l.004-.017l-.017-.427c-.002-.01-.009-.017-.017-.018m.265-.113l-.013.002l-.185.093l-.01.01l-.003.011l.018.43l.005.012l.008.007l.201.093c.012.004.023 0 .029-.008l.004-.014l-.034-.614c-.003-.012-.01-.02-.02-.022m-.715.002a.023.023 0 0 0-.027.006l-.006.014l-.034.614c0 .012.007.02.017.024l.015-.002l.201-.093l.01-.008l.004-.011l.017-.43l-.003-.012l-.01-.01z"/><path fill="white" d="M12 2c5.523 0 10 4.477 10 10a9.985 9.985 0 0 1-3.999 8H20a1 1 0 1 1 0 2h-8C6.477 22 2 17.523 2 12S6.477 2 12 2m0 12a2 2 0 1 0 0 4a2 2 0 0 0 0-4m-4-4a2 2 0 1 0 0 4a2 2 0 0 0 0-4m8 0a2 2 0 1 0 0 4a2 2 0 0 0 0-4m-4-4a2 2 0 1 0 0 4a2 2 0 0 0 0-4"/></g></svg>
                        Films</button>
                    </a>

                    <a href="/dashboard/admin/rooms">
                        <button class="text-white font-arvo font-bold h-12 w-full hover:bg-goldOne active:bg-goldOne flex justify-start items-center px-10 gap-4 text-nowrap mb-7"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"><path fill="currentColor" d="M20 19h-1V5c0-.55-.45-1-1-1h-4c0-.55-.45-1-1-1H6c-.55 0-1 .45-1 1v15H4c-.55 0-1 .45-1 1s.45 1 1 1h9c.55 0 1-.45 1-1V6h3v14c0 .55.45 1 1 1h2c.55 0 1-.45 1-1s-.45-1-1-1m-9-6c-.55 0-1-.45-1-1s.45-1 1-1s1 .45 1 1s-.45 1-1 1"/></svg>
                        Salles</button>
                    </a>

                    <a href="/dashboard/admin/employees">
                        <button class="text-white font-arvo font-bold h-12 w-full hover:bg-goldOne active:bg-goldOne flex justify-start items-center px-10 gap-4 text-nowrap mb-7"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 256 256"><path fill="currentColor" d="M230.93 220a8 8 0 0 1-6.93 4H32a8 8 0 0 1-6.92-12c15.23-26.33 38.7-45.21 66.09-54.16a72 72 0 1 1 73.66 0c27.39 8.95 50.86 27.83 66.09 54.16a8 8 0 0 1 .01 8"/></svg>
                        Employés</button>
                    </a>

                    <a href="/dashboard/admin/showtimes">
                        <button class="text-white font-arvo font-bold h-12 w-full hover:bg-goldOne active:bg-goldOne flex justify-start items-center px-10 gap-4 text-nowrap mb-7">
                            <svg xmlns="http://www.w3.org/2000/svg" width="19" height="19" viewBox="0 0 24 24"><path fill="white" d="m4 4l2 4h3L7 4h2l2 4h3l-2-4h2l2 4h3l-2-4h3q.825 0 1.413.588T22 6v12q0 .825-.587 1.413T20 20H4q-.825 0-1.412-.587T2 18V6q0-.825.588-1.412T4 4m0 6v8h16v-8zm0 0v8z"/></svg>
                        Séance</button>
                    </a>
                </div> 
            <% }
            %>

            <% if (user && user.role === 'employee') { %>
                <form action="/api/v1/logout" method="post" class="w-full mt-28">
                    <button class="h-12 w-full flex flex-row justify-start items-center text-white font-arvo font-bold lg:px-14 md:px-6 gap-4 mt-64 hover:bg-goldOne active:bg-goldOne">
                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 24 24"><path fill="white" d="M5 5h6c.55 0 1-.45 1-1s-.45-1-1-1H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h6c.55 0 1-.45 1-1s-.45-1-1-1H5z"/><path fill="white" d="m20.65 11.65l-2.79-2.79a.501.501 0 0 0-.86.35V11h-7c-.55 0-1 .45-1 1s.45 1 1 1h7v1.79c0 .45.54.67.85.35l2.79-2.79c.2-.19.2-.51.01-.7"/></svg>
                        <p>Déconnexion</p>
                    </button>
                </form>
            <% } else if (user && user.role === 'user') { %>
                <form action="/api/v1/logout" method="post" class="w-full pt-16">
                    <button class="mt-32 h-12 w-full flex flex-row justify-start items-center text-white font-arvo font-bold lg:px-14 md:px-6 gap-4 hover:bg-goldOne active:bg-goldOne">
                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 24 24"><path fill="white" d="M5 5h6c.55 0 1-.45 1-1s-.45-1-1-1H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h6c.55 0 1-.45 1-1s-.45-1-1-1H5z"/><path fill="white" d="m20.65 11.65l-2.79-2.79a.501.501 0 0 0-.86.35V11h-7c-.55 0-1 .45-1 1s.45 1 1 1h7v1.79c0 .45.54.67.85.35l2.79-2.79c.2-.19.2-.51.01-.7"/></svg>
                        <p>Déconnexion</p>
                    </button>
                </form>
                <% } else if (user && user.role === 'admin') { %>
                    <form action="/api/v1/logout" method="post" class="w-full">
                        <button class="h-12 w-full flex flex-row justify-start items-center text-white font-arvo font-bold lg:px-14 md:px-6 gap-4 hover:bg-goldOne active:bg-goldOne mt-52">
                            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 24 24"><path fill="white" d="M5 5h6c.55 0 1-.45 1-1s-.45-1-1-1H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h6c.55 0 1-.45 1-1s-.45-1-1-1H5z"/><path fill="white" d="m20.65 11.65l-2.79-2.79a.501.501 0 0 0-.86.35V11h-7c-.55 0-1 .45-1 1s.45 1 1 1h7v1.79c0 .45.54.67.85.35l2.79-2.79c.2-.19.2-.51.01-.7"/></svg>
                            <p>Déconnexion</p>
                        </button>
                    </form>
                    <% }
